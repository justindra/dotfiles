Config { font = "xft:Ubuntu Mono:pixelsize=16:antialias=true:hinting=true"
       , additionalFonts = [
              "xft:Font Awesome 5 Pro:size=10",
              "xft:Font Awesome 5 Brands:size=10"
       ]
       , borderColor = "black"
       , border = TopB
       , bgColor = "#2F343F"
       , fgColor = "#F3F4F5"
       , alpha = 255
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Weather "CYRV" ["-t","<station>: <tempC>C",
                                          "-L","18","-H","25",
                                          "--normal","green",
                                          "--high","red",
                                          "--low","lightblue"] 36000
                    , Run Cpu ["-L","3","-H","50",
                               "--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Com "/bin/bash" ["-c", "~/.config/xmobar/get-volume.sh"]  "volume" 10
                    , Run Com "/bin/bash" ["-c", "~/.config/xmobar/get-wifi.sh"]  "wifi" 10
                    , Run Date "%a %b %_d %Y %H:%M" "date" 60
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%cpu% | %memory% | %swap% }\
                    \%StdinReader%\
                    \{ %wifi% | %volume% | %CYRV% | %date% "
       }
